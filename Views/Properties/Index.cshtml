@model MyRent.Models.ViewModels.PropertyListPageVm
@{
    ViewData["Title"] = "Properties";
    var search = Model.Search ?? "";
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">Properties</h2>
                <div class="text-secondary">@Model.TotalCount results</div>
            </div>
        </div>

        <div class="row mt-3 g-2 align-items-center">
            <div class="col-12 col-md-8">
                <form method="get" class="input-icon">
                    <span class="input-icon-addon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                    </span>
                    <input name="search" value="@search" class="form-control" placeholder="Search by name, city, country, type…" />
                    <input type="hidden" name="page" value="1" />
                    <input type="hidden" name="pageSize" value="@Model.PageSize" />
                </form>
            </div>

            <div class="col-12 col-md-4">
                <form method="get" class="d-flex justify-content-md-end gap-2">
                    <input type="hidden" name="search" value="@search" />
                    <input type="hidden" name="page" value="@Model.Page" />
                    <select name="pageSize" class="form-select w-auto" onchange="this.form.submit()">
                        @{
                            int[] sizes = { 6, 12, 24, 48 };
                            foreach (var s in sizes)
                            {
                                <option value="@s" selected="@(Model.PageSize == s)">@s / page</option>
                            }
                        }
                    </select>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        @if (!Model.Items.Any())
        {
            <div class="empty">
                <div class="empty-header">No results</div>
                <p class="empty-title">Try another search</p>
            </div>
        }
        else
        {
            <div class="row row-cards">
                @foreach (var p in Model.Items)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            @if (!string.IsNullOrWhiteSpace(p.PictureMainUrl))
                            {
                                <img class="card-img-top" src="@p.PictureMainUrl" alt="@p.Name" loading="lazy" />
                            }
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between gap-2">
                                    <div>
                                        <h3 class="card-title mb-1">@p.Name</h3>
                                        <div class="text-secondary">
                                            @(p.ObjectType ?? "—") · @(p.CityName ?? "—"), @(p.Country ?? "—")
                                        </div>
                                    </div>
                                    @if (p.ClassificationStar is not null)
                                    {
                                        <span class="badge bg-azure-lt">@p.ClassificationStar★</span>
                                    }
                                </div>

                                <div class="mt-3 d-flex flex-wrap gap-2">
                                    <span class="badge bg-blue-lt">Optimal: @p.CanSleepOptimal</span>
                                    <span class="badge bg-indigo-lt">Max: @p.CanSleepMax</span>

                                    @if (string.Equals(p.InstantBooking, "Y", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-green-lt">Instant booking</span>
                                    }
                                    @if (string.Equals(p.PayCard, "Y", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-teal-lt">Card</span>
                                    }
                                    @if (string.Equals(p.PayIban, "Y", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-cyan-lt">IBAN</span>
                                    }
                                    @if (string.Equals(p.PayCash, "Y", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-yellow-lt">Cash</span>
                                    }
                                </div>

                                <div class="mt-3">
                                    <a class="btn btn-primary w-100" href="/properties/@p.IdHash">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-4 d-flex justify-content-center">
                <nav>
                    <ul class="pagination">
                        @{
                            string Url(int targetPage) =>
                                $"/properties?search={Uri.EscapeDataString(search)}&page={targetPage}&pageSize={Model.PageSize}";

                            var prevDisabled = Model.Page <= 1 ? "disabled" : "";
                            var nextDisabled = Model.Page >= Model.TotalPages ? "disabled" : "";
                        }

                        <li class="page-item @prevDisabled">
                            <a class="page-link" href="@(Model.Page <= 1 ? "#" : Url(Model.Page - 1))">Prev</a>
                        </li>

                        @{
                            var start = Math.Max(1, Model.Page - 2);
                            var end = Math.Min(Model.TotalPages, Model.Page + 2);

                            for (var i = start; i <= end; i++)
                            {
                                var active = i == Model.Page ? "active" : "";
                                <li class="page-item @active">
                                    <a class="page-link" href="@Url(i)">@i</a>
                                </li>
                            }
                        }

                        <li class="page-item @nextDisabled">
                            <a class="page-link" href="@(Model.Page >= Model.TotalPages ? "#" : Url(Model.Page + 1))">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>