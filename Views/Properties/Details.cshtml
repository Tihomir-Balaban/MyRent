@model MyRent.Models.ViewModels.PropertyDetailsPageVm
@{
    ViewData["Title"] = Model.Details[0].Name;
    var d = Model.Details;
}

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <div class="text-secondary mb-1">
                    <a href="/properties">← Back to list</a>
                </div>
                <h2 class="page-title">@d[0].Name</h2>
                <div class="text-secondary">
                    @(d[0].Address ?? "—") · @(d[0].CityName ?? "—") @(d[0].CityZip ?? "") · @(d[0].Country ?? "—")
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="container-xl">
        <div class="row g-3">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Overview</h3>

                        <div class="row g-2">
                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Type</div>
                                <div class="fw-semibold">@(d[0].ObjectType ?? "—")</div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Sleeps (optimal)</div>
                                <div class="fw-semibold">@d[0].CanSleepOptimal</div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Sleeps (max)</div>
                                <div class="fw-semibold">@d[0].CanSleepMax</div>
                            </div>

                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Beds</div>
                                <div class="fw-semibold">@(d[0].Beds?.ToString() ?? "—")</div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Bedrooms</div>
                                <div class="fw-semibold">@(d[0].Bedrooms?.ToString() ?? "—")</div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Bathrooms</div>
                                <div class="fw-semibold">@(d[0].Bathrooms?.ToString() ?? "—")</div>
                            </div>

                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Check-in</div>
                                <div class="fw-semibold">@(d[0].CheckIn ?? "—")</div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Check-in until</div>
                                <div class="fw-semibold">@(d[0].CheckInUntil ?? "—")</div>
                            </div>
                            <div class="col-6 col-md-4">
                                <div class="text-secondary">Check-out</div>
                                <div class="fw-semibold">@(d[0].CheckOut ?? "—")</div>
                            </div>
                        </div>

                        <hr />

                        <h3 class="card-title">Payments & Booking</h3>
                        <div class="d-flex flex-wrap gap-2">
                            @if (string.Equals(d[0].InstantBooking, "Y", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-green-lt">Instant booking</span>
                            }
                            @if (string.Equals(d[0].PayCard, "Y", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-teal-lt">Card</span>
                            }
                            @if (string.Equals(d[0].PayIban, "Y", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-cyan-lt">IBAN</span>
                            }
                            @if (string.Equals(d[0].PayCash, "Y", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-yellow-lt">Cash</span>
                            }
                            @if (d[0].ClassificationStar is not null)
                            {
                                <span class="badge bg-azure-lt">@d[0].ClassificationStar★</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Gallery</h3>

                        @if (Model.PictureLinks.Count == 0)
                        {
                            <div class="text-secondary">No pictures found.</div>
                        }
                        else
                        {
                            <div class="row g-2">
                                @foreach (var url in Model.PictureLinks.Take(12))
                                {
                                    <div class="col-4">
                                        <a href="@url" target="_blank" rel="noreferrer">
                                            <img src="@url" class="img-fluid rounded" loading="lazy" />
                                        </a>
                                    </div>
                                }
                            </div>

                            @if (Model.PictureLinks.Count > 12)
                            {
                                <div class="mt-3 text-secondary">
                                    Showing 12 of @Model.PictureLinks.Count images.
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
